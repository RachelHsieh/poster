                <div class="sub-point">Connecting our innovation of DNA with supplier capabilities to define the future of product through sustainability</div>
            </div>
        </div>
    </div>

    <script>
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');
        const container = document.getElementById('container');
        const statusMessage = document.getElementById('statusMessage');

        // Function to load image and set as background
        function loadImageAsBackground(file) {
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    container.style.backgroundImage = `url(${e.target.result})`;
                    dropZone.style.display = 'none';
                    statusMessage.textContent = `Loaded: ${file.name}`;
                    statusMessage.style.background = 'rgba(0, 200, 0, 0.8)';
                };
                reader.readAsDataURL(file);
            } else {
                statusMessage.textContent = 'Please select a valid image file';
                statusMessage.style.background = 'rgba(200, 0, 0, 0.8)';
            }
        }

        // File input change handler
        fileInput.addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                loadImageAsBackground(e.target.files[0]);
            }
        });

        // Drag and drop handlers
        dropZone.addEventListener('dragover', function(e) {
            e.preventDefault();
            dropZone.classList.add('dragover');
        });

        dropZone.addEventListener('dragleave', function(e) {
            e.preventDefault();
            dropZone.classList.remove('dragover');
        });

        dropZone.addEventListener('drop', function(e) {
            e.preventDefault();
            dropZone.classList.remove('dragover');
            
            if (e.dataTransfer.files.length > 0) {
                loadImageAsBackground(e.dataTransfer.files[0]);
            }
        });

        // Try to automatically load the uploaded image from the conversation
        async function tryAutoLoad() {
            const commonFilenames = [
                'aurora.jpg', 'aurora.jpeg', 'aurora.png', 'aurora.webp',
                'bike.jpg', 'bike.jpeg', 'bike.png', 'bike.webp',
                'image.jpg', 'image.jpeg', 'image.png', 'image.webp',
                'background.jpg', 'background.jpeg', 'background.png',
                'photo.jpg', 'photo.jpeg', 'photo.png',
                'picture.jpg', 'picture.jpeg', 'picture.png'
            ];

            for (const filename of commonFilenames) {
                try {
                    if (window.fs && window.fs.readFile) {
                        const imageData = await window.fs.readFile(filename);
                        const blob = new Blob([imageData]);
                        const imageUrl = URL.createObjectURL(blob);
                        
                        container.style.backgroundImage = `url(${imageUrl})`;
                        dropZone.style.display = 'none';
                        statusMessage.textContent = `Auto-loaded: ${filename}`;
                        statusMessage.style.background = 'rgba(0, 200, 0, 0.8)';
                        return;
                    }
                } catch (e) {
                    // Continue to next filename
                }
            }
            
            // If auto-load fails, show instructions
            statusMessage.textContent = 'Click or drag your aurora bike image above';
        }

        // Try auto-loading when page loads
        window.addEventListener('load', tryAutoLoad);
    </script>
</body>
